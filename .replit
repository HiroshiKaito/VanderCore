modules = ["python3", "python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Solana Trading Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test AI Engine"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "API Test"

[[workflows.workflow]]
name = "Solana Trading Bot"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python bot.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Test AI Engine"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_ai_trading.py"

[[workflows.workflow]]
name = "API Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 test_market_data.py"

[deployment]
run = ["sh", "-c", "python bot.py"]

[[ports]]
localPort = 5000
externalPort = 80
