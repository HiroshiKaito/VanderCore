modules = ["python3", "python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Solana Trading Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test AI Engine"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "API Test"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Risk Analyzer"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Sentiment Analyzer"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Chart Analyzer"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Signal Generator"

[[workflows.workflow]]
name = "Solana Trading Bot"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python bot.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Test AI Engine"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_ai_trading.py"

[[workflows.workflow]]
name = "API Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 test_market_data.py"

[[workflows.workflow]]
name = "Test Risk Analyzer"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m unittest test_risk_analyzer.py -v"

[[workflows.workflow]]
name = "Test Sentiment Analyzer"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m unittest test_sentiment_analyzer.py -v"

[[workflows.workflow]]
name = "Test Chart Analyzer"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m unittest test_chart_analyzer.py -v"

[[workflows.workflow]]
name = "Test Signal Generator"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m unittest test_automated_signal_generator.py -v"

[deployment]
run = ["sh", "-c", "python bot.py"]

[[ports]]
localPort = 5000
externalPort = 80
